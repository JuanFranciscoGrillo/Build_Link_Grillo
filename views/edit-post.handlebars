{{#extend "layouts/main"}}
    {{#content "body"}}
        <h1>Edit Job Listing</h1>
        <form action="/posts/edit/{{id}}" method="post" class="edit-post-form">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="{{title}}" required>
            </div>

            <div class="form-group">
                <label for="description">Description:</label>
                <textarea id="description" name="description" required>{{description}}</textarea>
            </div>

            <div class="form-group">
                <label for="location">Location:</label>
                <input type="text" id="location" name="location" value="{{location}}" required>
            </div>

            <div class="form-group">
                <label for="salary">Salary:</label>
                <input type="number" id="salary" name="salary" value="{{salary}}" required>
            </div>

            <div class="form-group">
                <label for="company">Company:</label>
                <input type="text" id="company" name="company" value="{{company}}" required>
            </div>

            <!-- Additional fields can be added as needed -->

            <button type="submit" class="submit-button">Update Listing</button>
        </form>
    {{/content}}
{{/extend}}
